  "content": {
    "resolution": null,
    "position": null,
    "rotation": 0,
    "scaling": "fit"
  },
  
  "performance": {
    "cpu_performance_mode": true,
    "priority": 0
  },
  
  "logging": {
    "level": "INFO"
  }
}


