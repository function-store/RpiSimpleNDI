{
  "description": "Adaptive configuration - auto-detect display and fit content",
  
  "ndi": {
    "source_suffix": "_led",
    "scan_timeout": 2,
    "color_format": "bgra"
  },
  
  "display": {
    "resolution": null,
    "fullscreen": true,
    "video_driver": "auto",
    "show_fps": true
