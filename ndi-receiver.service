[Unit]
Description=NDI Receiver LED Screen Service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=catatumbo
WorkingDirectory=/home/catatumbo/led_test
Environment="DISPLAY=:0"
Environment="PYTHONUNBUFFERED=1"
ExecStart=/home/catatumbo/led_test/venv/bin/python3 ndi_receiver.py --config config.led_screen.json
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

